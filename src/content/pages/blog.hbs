<h1>Coffee Fueled Ramblings (aka The Blog)</h1>

{{#withSort blog "data.posted"}}
    {{#each this.pages }}
        <article class="blog-post">
            <h2 class="blog-post__title">{{ this.data.title }}</h2>
            <h3 class="blog-post__date">{{ this.data.posted }}</h3>
            {{#markdown}}
                {{ this.page }}
            {{/markdown}}
        </article>
    {{/each}}
{{/withSort}}
