---
component: contact-form
---
<form id="contact-form" class="form form--bordered" action="php/contact.php" method="POST" name="contact" netlify>
    <fieldset class="form__fieldset">
        <label class="form__label" for="name">Your Name</label>
        <input type="text" placeholder="Your name" maxlength="40"
            class="form__input" id="name" name="name" required />
        <span class="error-msg" id="name-required">Name required.</span>
    </fieldset>

    <fieldset class="form__fieldset">
        <label class="form__label" for="email">Your Email</label>
        <input type="email" class="form__input" id="email" name="email" placeholder="Your email" required />
        <span class="error-msg" id="email-required">Email required.</span>
        <span class="error-msg" id="email-invalid">Invalid email.</span>
    </fieldset>

    <fieldset class="form__fieldset">
        <label class="form__label" for="message">Your Message</label>
        <textarea class="form__input form__textarea" placeholder="Your message"
            required id="message" name="message" ></textarea>
        <span class="error-msg" id="message-required">Message required.</span>
    </fieldset>

    <fieldset class="form__fieldset right">
        <input type="reset" class="button button--reset" id="reset" value="Reset" />
        <input type="submit" class="button button--submit" id="send" value="Send" />
    </fieldset>
</form>

<div class="form send-success-msg">
    <h2 class="success-msg__heading">Success!</h2>

    <p>Thank you for your message.</p>
</div>

<div class="form send-error-msg">
    <h2 class="error-msg__heading">Oops!</h2>

    <p>Your message wasn't sent out. Please try again.</p>
</div>
